
<div class="container">
	<div class="row">
		<div class="col-sm-7 offset-sm-1">
			<div class="fresh-press">
				<div class="row">
					<% @recent_posts.each do |p| %>
						<div class="col-sm-6">
							<div class="post-panel">
								<div class="post-body">
									<h3 class="post-title"><%= link_to p.title, p %></h3>
									<div class="post-owner">
										<div class="owner-img">
											<%= link_to avatar_for(p.user, size: 40), p.user %>
										</div>
										<div class="post-info">
											<p><%= link_to p.user.username, p.user %></p> 
											<p><small class="text-muted"><%= time_ago_in_words(p.created_at)	+ " ago" %></small>	</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-sm-3">
			<div class="trending">
				<!-- <h1>Trending..</h1> -->
			</div>
		</div>
	</div>
</div>
